<view class="page" data-weui-theme="{{theme}}">
    <view class="page__bd">
        <view class="weui-form">
            <view class="">
                <view class="weui-cells__group weui-cells__group_form">
                    <view class="weui-cells__title">用户信息</view>
                    <view class="weui-cells weui-cells_form">
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">姓名</label>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" value="{{username}}" bindinput="handleUsername"
                                       placeholder="姓名"/>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">身份证号</label>
                            </view>
                            <view class="weui-cell__bd">
                                <input value="{{idCard}}" bindinput="handleIdCard" class="weui-input"
                                       placeholder="身份证号"/>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">联系电话</label>
                            </view>
                            <view class="weui-cell__bd">
                                <input value="{{telephone}}"
                                       bindinput="handleTel"
                                       class="weui-input"
                                       placeholder="联系电话"
                                       type="number"
                                       pattern="[0-9]*"/>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
            <view>
                <button class="weui-btn" type="primary" bindtap="binding">绑定</button>
            </view>
        </view>
    </view>
</view>
