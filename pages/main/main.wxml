<!--main.wxml-->
<view class="page">
  <view class="page__bd">

    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__bd">
        <view class="weui-media-box weui-media-box_text">
          <view class="weui-media-box__title weui-media-box__title_in-text">当前总分</view>
          <view class="weui-media-box__desc">{{totalScore}}</view>
        </view>
      </view>
    </view>

    <view class="weui-panel">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">加分</view>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" bindchange="scoreChange" name="score" placeholder="请输入分数" type="number" value="{{score}}" />
          </view>
        </view>
      </view>
    </view>

    <view class="weui-panel">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea class="weui-textarea" bindinput="reasonChange" name="reason" placeholder="请输入理由" maxlength="-1" auto-height style="min-height: 4em" />
          </view>
        </view>
      </view>
    </view>

    <view class="weui-btn-area">
      <button class="weui-btn" type="primary" bindtap="save">确定</button>
    </view>

  </view>
</view>