<view class="page">
    <view class="page__bd">
        <view wx:if="{{!hasLogin}}" class="header-box">
            <view class="avatar">
                <image class="avatar" src="../../images/no-login.png"></image>
            </view>
            <view>
                <button class="mini-btn" type="primary" size="mini" open-type="getUserInfo" bindgetuserinfo="login">授权登录
                </button>
            </view>
        </view>
        <block wx:else>
            <view class="header-box">
                <view class="avatar">
                    <open-data type="userAvatarUrl"></open-data>
                </view>
                <view>
                    <open-data class="nick" type="userNickName"></open-data>
                </view>
            </view>
            <mp-cells ext-class="my-cells" title="">
                <mp-cell link url="/pages/order/order" value="我的挂号"></mp-cell>
                <mp-cell link url="/pages/report/report" value="我的报告"></mp-cell>
                <mp-cell link url="/pages/binding/binding" value="我的绑定"></mp-cell>
            </mp-cells>
        </block>
    </view>
</view>